extends ./share/layout
block content
    .container.row.col-12
        h1 Home Page
        p
            a(href="/registration") Registration Template Page
        p
            a(href="/login") Login
        p
            a(href="/user/profile") Profile
        p
            a(href="/user/logout") Logout
        p
            a(href="/auth/facebook") Facebook Login

    .container
        h1.
            Upload File
        form(enctype="multipart/form-data",method="post",action="/user/files/upload")
            input(type="txt", name="mytxt")
            input(type="file", name="file")
            input(type="submit" value="Upload")

    .container
        h1.
            Send File
        form(method="post",action="/user/sendEmail")
            input(type="txt", name="mytxt")
            input(type="file", name="file")
            input(type="submit" value="delete")
    script.
        start = new Date();
        function a() {
            setTimeout(function () {
                d = new Date();
                console.log("aaaaaaaaaaaaa " + (d.getTime() - start.getTime()));
            }, 5000);
        }
        function b() {
            setTimeout(function () {
                d = new Date();
                console.log("bbbbbbbbb " + (d.getTime() - start.getTime()));
            }, 1000);
        }
        function c(){
         a();
         b();
        }
        c();
    //-
        .container
            h1.
                Delete File
            form(method="post",action="/user/files/remove/asd")
                input(type="txt", name="mytxt")
                input(type="file", name="file")
                input(type="submit" value="delete")

        .container
            h1.
                Download File
            form(method="post",action="/user/files/download/asd")
                input(type="txt", name="mytxt")
                input(type="file", name="file")
                input(type="submit" value="download")

